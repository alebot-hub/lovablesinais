# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Server Configuration
PORT=3000

# FRED API (Federal Reserve Economic Data) - GRATUITA
# Registre-se em: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage API - GRATUITA (25 requests/dia)
# Registre-se em: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Configurações de Autenticação
API_AUTH_TOKEN=seu_token_autenticacao_aqui

# Configurações da API do Coinglass
COINGLASS_API_KEY=SEU_API_KEY_AQUI
COINGLASS_API_URL=https://open-api.coinglass.com/api/pro/v1
COINGLASS_TIMEOUT=30000
COINGLASS_RETRY_ATTEMPTS=3
COINGLASS_RETRY_DELAY=1000

# Configurações de Cache
COINGLASS_CACHE_ENABLED=true
COINGLASS_CACHE_TTL=300000
COINGLASS_CACHE_MAX_SIZE=1000
COINGLASS_CACHE_CLEANUP_INTERVAL=3600000

# Configurações de Monitoramento
COINGLASS_HEALTH_CHECK_INTERVAL=60000
COINGLASS_PERFORMANCE_METRICS_INTERVAL=300000
COINGLASS_MAX_RESPONSE_TIME=2000
COINGLASS_ERROR_THRESHOLD=5

# Configurações de Endpoints
# Futures
COINGLASS_FUTURES_ENABLED=true
COINGLASS_FUTURES_REFRESH_INTERVAL=60000
COINGLASS_FUTURES_SYMBOLS=BTC,ETH

# Options
COINGLASS_OPTIONS_ENABLED=true
COINGLASS_OPTIONS_REFRESH_INTERVAL=300000
COINGLASS_OPTIONS_SYMBOLS=BTC

# Funding
COINGLASS_FUNDING_ENABLED=true
COINGLASS_FUNDING_REFRESH_INTERVAL=600000
COINGLASS_FUNDING_SYMBOLS=BTC,ETH

# Configurações de Validação
COINGLASS_VALIDATION_MAX_RETRIES=3
COINGLASS_VALIDATION_RETRY_DELAY=1000
COINGLASS_VALIDATION_INTERVAL=60000
COINGLASS_VALIDATION_ERROR_THRESHOLD=3